{
    "rewrites": [
        {
            "source": "/campaigns/:campaignId",
            "destination": "/"
        },
        {
            "source": "/:path*",
            "destination": "/"
        },
        { "source": "/(.*)", "destination": "/index.html" }
    ],
    "builds": [
        {
            "src": "index.html",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.html"
        }
    ]
}
